# vim:ft=plumed

RESTART

LOAD FILE=../../../RefCV.cpp

energy: ENERGY

vol: VOLUME

REFCV ...
 SPECIES=1-250
 SIGMA=0.065
 LATTICE_CONSTANTS=0.432
 CRYSTAL_STRUCTURE=BCC
 LABEL=refcv
 MORE_THAN={RATIONAL R_0=0.5 NN=12 MM=24}
 MEAN
... REFCV

HISTOGRAM ...
  DATA=refcv
  GRID_MIN=-1.5
  GRID_MAX=1.5
  GRID_BIN=1000
  BANDWIDTH=0.05
  LABEL=hh
  STRIDE=10
... HISTOGRAM

DUMPGRID GRID=hh FILE=histo STRIDE=5000

PRINT ARG=* FILE=COLVAR STRIDE=500

